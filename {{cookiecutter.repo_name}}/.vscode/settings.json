{
    // linting & formatting
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,
    "python.testing.pytestEnabled": true,
    "python.testing.pytestArgs": [
        "tests"
    ],
    "cSpell.words": [
        "camelcase",
        "caseconverter",
        "cookiecutter",
        "fastapi",
        "fundom",
        "uvicorn",
        "yastyleguide",
        "версионированием",
        "версионное",
        "монадической"
    ],
    // Uncomment and configure section below for custom commmit message format. It helps
    // to write formatted commit messages, but does not validate them.
    // "vscodeGitCommit.template": [ 
    //     "{{cookiecutter.commit_prefix}}{issue-number}:{message}"
    // ]
}